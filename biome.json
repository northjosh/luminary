{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/wrangler.jsonc",
      "!**/.source"
    ]
  },
  "linter": {
    "rules": {
      "recommended": false,
      "a11y": {
        "useValidAnchor": "info"
      },
      "style": {
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "noMagicNumbers": "info"
      },
      "suspicious": {
        "noConsole": "off",
        "useAwait": "off"
      },
      "nursery": {
        "useConsistentTypeDefinitions": "off",
        "useSortedClasses": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "off",
        "useTopLevelRegex": "off"
      }
    }
    
  },
  "assist": {
    "enabled": false
  },
  "extends": ["ultracite"]
}
